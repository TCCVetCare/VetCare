<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>@ViewBag.Title - VetCare</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="w-screen h-screen bg-neutral-900">
    <header class="w-screen h-16 top-0 z-20 fixed">
        <nav class="w-screen h-auto py-2 shadow flex-row">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 items-center">
                <div class="flex items-center justify-between h-auto">
                    <div class="w-auto h-auto flex items-center justify-evenly">
                        <a href="#" class="flex me items-center">
                            <img class="w-auto h-auto" src="logo-theme-dark.svg" alt="Logo">
                        </a>
                    </div>

                    <div>
                        <div class="hidden md:block">
                            <ul class="ml-10 flex items-baseline space-x-4">
                                <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "text-yellow-400" })</li>
                                <li>@Html.ActionLink("Pets", "ListPetCustomer", "Pet", new { area = "" }, new { @class = "text-yellow-400" })</li>
                                <li>@Html.ActionLink("Planos", "ListPlanCustomer", "Plan", new { area = "" }, new { @class = "text-yellow-400" })</li>
                                <li>@Html.ActionLink("Produtos", "Index", "Product", new { area = "" }, new { @class = "text-yellow-400" })</li>
                                <li>@Html.ActionLink("Agendamento", "Index", "Schedule", new { area = "" }, new { @class = "text-yellow-400" })</li>
                            </ul>
                        </div>
                    </div>

                    <div class="-mr-2 flex">
                        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-3xl text-yellow-400 bg-none transition duration-150 ease-in-out" aria-label="abir menu" aria-expanded="false" aria-pressed="false" aria-haspopup="true">
                            <i class="material-icons">shopping_cart</i>
                        </button>

                        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-3xl text-yellow-400 bg-none transition duration-150 ease-in-out" aria-label="abir menu" aria-expanded="false" aria-pressed="false" aria-haspopup="true">
                            <i class="material-icons">account_circle</i>
                        </button>

                        <button type="button" class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-3xl text-yellow-400 bg-none transition duration-150 ease-in-out" aria-label="abir menu" aria-expanded="false" aria-pressed="false" aria-haspopup="true">
                            <i class="material-icons">menu</i>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Menu responsivo -->
            <div class="md:hidden hidden">
                <ul class="px-2 pt-2 pb-3 sm:px-3">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "text-yellow-400" })</li>
                    <li>@Html.ActionLink("Pets", "ListPetCustomer", "Pet", new { area = "" }, new { @class = "text-yellow-400" })</li>
                    <li>@Html.ActionLink("Planos", "ListPlanCustomer", "Plan", new { area = "" }, new { @class = "text-yellow-400" })</li>
                    <li>@Html.ActionLink("Produtos", "Index", "Product", new { area = "" }, new { @class = "text-yellow-400" })</li>
                    <li>@Html.ActionLink("Agendamento", "Index", "Schedule", new { area = "" }, new { @class = "text-yellow-400" })</li>
                </ul>
            </div>
        </nav>
    </header>

    @RenderBody()

    <footer class="w-full h-auto relative bottom-0">

        <div class="w-full pr-4 col-span-2 text-right">
            <ul>
                <li class="text-gray-200">Contatos</li>

                <li class="flex-auto space-x-1 text-yellow-400 pt-3">
                    <i class="material-icons align-bottom">phone</i>
                    <a href="tel:+551132724731" class="text-gray-200">(11) 3272-4731</a>
                </li>

                <li class="flex-auto space-x-1 text-yellow-400 pt-3">
                    <i class="material-icons align-bottom">place</i>
                    <a href="http://" class="text-gray-200">Av. Eng. Caetano Álvares, 1339 - Limão, São Paulo</a>
                </li>

                <li class="flex-auto space-x-1 text-yellow-400 pt-3">
                    <i class="material-icons align-bottom">email</i>
                    <a href="mailto:vetcare@contato.com" class="text-gray-200">vetcare@contato.com</a>
                </li>
            </ul>
        </div>

        <div class="w-full h-auto pl-4 col-span-2 text-left">
